<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="DayRoutineManager.Views.DetailedDependiente"
             Background="#f5f5f5">

    <ContentPage.Content>
        <Frame  Margin="20,80,20,80"  CornerRadius="6"  >
            <StackLayout Padding="10,20,10,0">

                <Label Text="{Binding Nombre_dependiente}" HorizontalOptions="Center" TextColor="Black" FontSize="Large"/>

                <Entry x:Name="idDependiente"  Text="{Binding AdminDependiente_id}"/>
                <Entry x:Name="nombreDependiente"  Text="{Binding Nombre_dependiente}"/>
                <Entry x:Name="codigoDependiente" Text="{Binding codigo_dependiente}"/>


                <Button x:Name="btnUpdate" Text="Actualizar" Margin="30,30,30,10" Background="#CD7EF5" TextColor="White" FontAttributes="Bold" CornerRadius="10" BorderColor="#CD7EF5" BorderWidth="1.5" Clicked="btnUpdate_Clicked"/>
                <Button x:Name="btnDelete" Text="Eliminar" Background="#ff94c2" Margin="30,0,30,0" TextColor="White" FontAttributes="Bold" CornerRadius="10" BorderColor="#ff94c2" BorderWidth="1.5" Clicked="btnDelete_Clicked"/>
            
        </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>