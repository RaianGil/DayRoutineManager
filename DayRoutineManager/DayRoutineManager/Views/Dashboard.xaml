<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="DayRoutineManager.Views.Dashboard"
              Background="#f5f5f5">
    <ContentPage.Content>
        <StackLayout >
            <!--Header-->
            <StackLayout HeightRequest="70" Orientation="Horizontal" Background="#ab47bc">
                <Button x:Name="btnback" 
                        BackgroundColor="Transparent" 
                        WidthRequest="60"  
                        Margin="10,0,0,0"                        
                        Text="&#10094;"
                        FontSize="Large"
                        TextColor="#ffffff"
                        Clicked="btnback_Clicked"/>
                           
                <Label Text="Daily Routine Manager"
                       Padding="10,19,0,0"
                       FontSize="Large"
                       TextColor="White"
                       FontAttributes="Bold"
                       FontFamily="Bell MT"
                        />
                 </StackLayout>
            <!--Header-->
           
                <!--//body-->
                <StackLayout HeightRequest="600" Background="#f5f5f5" Margin="0,0,0,0">
                <StackLayout Orientation="Horizontal" Margin="0,0,0,25">
                <Button        Text="+"
                               x:Name="BtnAgregarDep" 
                               Clicked="BtnAgregarDep_Clicked" 
                               HorizontalOptions="Start" 
                               Margin="14,12,14,0"                                                            
                               TextColor="White" 
                               FontAttributes="Bold"
                               FontSize="Large"
                               CornerRadius="100" 
                               Background="#ffc1e3"
                               BorderWidth="2"
                               BorderColor="#f3e5f5"/>

                    <!--<Button Text="Recordatorios" 
                               x:Name="BtnRecordatorios" 
                               Clicked="BtnRecordatorios_Clicked"
                               HorizontalOptions="FillAndExpand"
                               Padding="-5"
                               Margin="14,12,14,0" 
                               TextColor="White" 
                               CornerRadius="100" 
                               Background="#e5d3e8"/>-->
                </StackLayout>
                <!--Reminders body-->
                <ScrollView HeightRequest="600" Orientation="Vertical">
                    <ListView x:Name="lvDashboard"
                               Grid.Row="1"
                               Grid.Column="1"
                               Grid.ColumnSpan="1"
                               ItemsSource="{Binding dependientes}"
                               RowHeight="180"
                               SelectionMode="Single"
                               ItemTapped="OnItemSelected">
                        <!--="lvDashboard_ItemTapped"-->
                               
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell Height="20">
                                        <Frame CornerRadius="10" 
                                               BorderColor="#f5f5f5" 
                                               Margin="14,6,14,10" 
                                               Padding="0">
                                            <StackLayout HeightRequest="180">
                                            <StackLayout Background="#CD7EF5" 
                                                             Orientation="Vertical" 
                                                             Margin="0"  
                                                             HeightRequest="40"
                                                             VerticalOptions="StartAndExpand">

                                                <Label Text="{Binding Nombre_dependiente}"
                                                           FontSize="20"
                                                           Grid.Column="0"
                                                           TextColor="White"
                                                           FontAttributes="Bold"
                                                           Margin="10,4,0,4"
                                                           HorizontalOptions="StartAndExpand"
                                                           HorizontalTextAlignment="Start"
                                                           />
                                                <Label Text="{Binding codigo_dependiente}"
                                                           FontSize="20"
                                                           Grid.Column="1"
                                                           TextColor="Black"
                                                            
                                                           Margin="10,6,0,4"
                                                           HorizontalOptions="StartAndExpand"
                                                           HorizontalTextAlignment="Start"
                                                           />
                                            </StackLayout>
                                                <Button x:Name="btnAddRecordatorio"
                                                        Background="transparent"
                                                        Text="Agregar Recordatorio"
                                                        TextColor="#CD7EF5"
                                                        FontAttributes="Bold"
                                                        BorderColor="#f3e5f5"
                                                        BorderWidth="1"
                                                        CornerRadius="8"
                                                        BindingContext="{}"
                                                        Clicked="btnAddRecordatorio_Clicked"/>
                                            </StackLayout>
                                        </Frame>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollView>
                <!--Reminders body-->
               
            </StackLayout>
            <!--//body-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>