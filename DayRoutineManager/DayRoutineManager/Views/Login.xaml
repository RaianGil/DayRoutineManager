<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DayRoutineManager.Views.Login"
             Background="#ECE7EF">
        
    <ContentPage.Content >
        <StackLayout Padding="20,0,20,20"  VerticalOptions="Center" HorizontalOptions="FillAndExpand" >
            <Grid>
                <Image Source="LogoCompletoSinFondo" Opacity="0" />
            </Grid>
            <Label Text="Bienvenido!"  
                    VerticalOptions="Start"
                   HorizontalOptions="Center"
                    TextColor="#5d3569" FontSize="50" FontFamily="Arial" VerticalTextAlignment="Center"   />

            <Button
                Text="Administrador"                
                BorderColor="#feb7c7"
                BorderWidth="1.5"
                CornerRadius="15"
                VerticalOptions="EndAndExpand"   
                TextColor="White" Margin="10" Background="#feb7c7" />


            <Button Text="Dependiente"
                    BorderColor="#dfcff4"
                    BorderWidth="1.5"
                    CornerRadius="15"
                    TextColor="#fff" Margin="10,0" Background="#dfcff4"
                    VerticalOptions="EndAndExpand" />


        </StackLayout>

      
    </ContentPage.Content>
</ContentPage>