<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DayRoutineManager.Views.RecordatorioDeteail"
             BackgroundColor="#f5f5f5">
             
    <ContentPage.Content>
        <Frame  Margin="20,80,20,80"  CornerRadius="6"  >
            <StackLayout Padding="10,20,10,0">

                <Label Text="{Binding Titulo_recordatorio}" HorizontalOptions="Center" TextColor="Black" FontSize="Large"/>

                <Entry x:Name="titulo_recordatorio" Text="{Binding Titulo_recordatorio}"/>
                <Entry x:Name="descripcion_recordatorio" Text="{Binding Descripcion_recordatorio}"/>
                <Entry x:Name="fecha_recordatorio" Text="{Binding Fecha_inicio}"/>

                <Button x:Name="btnUpdate" Text="Actualizar" Margin="0,30,0,10" Background="#6E268B" TextColor="White" FontAttributes="Bold" CornerRadius="10" BorderColor="#CD7EF5" BorderWidth="1.5" Clicked="btnUpdate_Clicked"/>
                <Button x:Name="btnDelete" Text="Eliminar" Background="#CD7EF5" TextColor="White" FontAttributes="Bold" CornerRadius="10" BorderColor="#6E268B" BorderWidth="1.5" Clicked="btnDelete_Clicked"/>

            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>
