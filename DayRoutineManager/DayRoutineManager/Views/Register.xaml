<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DayRoutineManager.Views.Register"
             Background="#f5f5f5">
    <ContentPage.Content>
        <StackLayout Margin="5,0,5,0"   VerticalOptions="Center" HorizontalOptions="FillAndExpand" >
            <Grid  >
                <Image Source="LogoCompletoSinFondo"  />
            </Grid>
            <StackLayout HorizontalOptions="CenterAndExpand" WidthRequest="250" Orientation="Vertical">
                <Button
                Text="Iniciar"         
                x:Name="btnIniciar"               
                CornerRadius="14"                
                VerticalOptions="EndAndExpand"
                Clicked="btnIniciar_Clicked"
                TextColor="White" Margin="10,12,10,0" FontAttributes="Bold" Background="#ff94c2" />
               

                <Button
                Text="Recordatorios"
                x:Name="btnRecordatorio"              
                CornerRadius="14"
                VerticalOptions="EndAndExpand"
                Clicked="btnRecordatorio_Clicked"
                TextColor="White" Margin="10,12,10,0" FontAttributes="Bold" Background="#CD7EF5" />
            </StackLayout>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>