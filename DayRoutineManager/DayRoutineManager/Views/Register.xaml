<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DayRoutineManager.Views.Register"
             Background="#f5f5f5">
    <ContentPage.Content>
        <StackLayout Margin="5,0,5,0"   VerticalOptions="Center" HorizontalOptions="FillAndExpand" >
            <Grid  >
                <Image Source="LogoCompletoSinFondo"  />
            </Grid>
            <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Vertical">
                <Button
                Text="Iniciar"         
                x:Name="btnIniciar"
                BorderColor="#CD7EF5"
                BorderWidth="1.5"
                CornerRadius="10"
                VerticalOptions="EndAndExpand"
                Clicked="btnIniciar_Clicked"
                TextColor="White" Margin="14,12,14,0" FontAttributes="Bold" Background="#6E268B" />
                
                <Button
                Text="Recordatorios"
                x:Name="btnRecordatorio"
                BorderColor="#6E268B"
                BorderWidth="1.5"
                CornerRadius="10"
                VerticalOptions="EndAndExpand"
                Clicked="btnRecordatorio_Clicked"
                TextColor="White" Margin="14,12,14,0" FontAttributes="Bold" Background="#CD7EF5" />
            </StackLayout>

        </StackLayout>

    </ContentPage.Content>
</ContentPage>